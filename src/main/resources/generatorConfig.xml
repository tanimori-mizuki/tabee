<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

  
 <generatorConfiguration>
	<!-- MySQLに接続するConnectorJのjarファイルを指定 -->
	<classPathEntry location="C:\Users\mysql-connector-java-8.0.22\mysql-connector-java-8.0.22.jar"/>
	
	<!-- DB接続先URL指定 -->
	<context id="MySQL" targetRuntime="MyBatis3">
		<jdbcConnection driverClass="com.mysql.cj.jdbc.Driver" 
						connectionURL="jdbc:mysql://localhost:3306/tabee?serverTimezone=JST"
						userId="root"
						password="mysqlmysql">
		</jdbcConnection>
		
		<!-- 自動生成ファイルの格納先ファイルパス指定 -->
		<!-- 【作成ファイル１】Domainクラス : テーブルカラムを読み込んでフィールド変数・getter/setter設定 -->
		<!-- 【作成ファイル２】Exampleクラス : Mapper引数として与えることで、where句のように働く -->
		<javaModelGenerator targetPackage="com.example.domain" targetProject="src/main/java">
			<!-- enableSubPackagesが実際のパッケージの計算方法を制御 -->
			<!-- trueの場合、計算されたパッケージは、targetPackageに加えて、テーブルのカタログとスキーマ（存在する場合）のサブパッケージになる。-->
			<property name="enableSubPackages" value="true"/>
			<!-- このプロパティは、Ibatorがデータベースから返された文字フィールドから空白を削除するコードを追加するかどうかを選択するために使用されます。-->
			<!-- これは、データベースがVARCHARフィールドではなくCHARフィールドにデータを格納している場合に役立ちます。-->
			<!-- trueの場合、Ibatorは文字フィールドをトリミングするコードを挿入します。 -->
			<property name="trimStrings" value="true"/>
		</javaModelGenerator>
		
		<!-- 【作成ファイル３】XMLファイル -->
		<!-- DBから取得した値をどのドメインに格納するかマッピング定義する -->
		<!-- Javaから渡された値をどのように解釈するかマッピング定義する -->
		<!-- Mapperインターフェースに宣言されたメソッドに対応するSQLを記述する -->
		<!-- myBatisGeneratorで自動生成すると、基本的なSQLはデフォルトで書いておいてくれる -->
		<sqlMapGenerator targetPackage="com.example.mapper" targetProject="src/main/resources">
			<property name="enableSubPackages" value="true"/>
		</sqlMapGenerator>
		
		<!-- 【作成ファイル４】Mapperインターフェース -->
		<!-- 前述したXML上のSQLを呼び出す -->
		<!-- myBatisGeneratorで自動生成すると、insertやdeleteなど基本的な機能はデフォルトで書いておいてくれる -->
		<javaClientGenerator type="XMLMAPPER" targetPackage="com.example.mapper" targetProject="src/main/java">
			<property name="enableSubPackages" value="true"/>
		</javaClientGenerator>
	
